<Window x:Class="guitarTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:guitarTools"
        mc:Ignorable="d"
        Title="MainWindow" Height="360" Width="525"
        Name="mainWindow">
    <StackPanel>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="497">
            <MenuItem Header="Edit">
                <MenuItem Cursor="Hand" Header="Scale" Background="{x:Null}"/>
            </MenuItem>
        </Menu>
        <Viewbox>
            <Grid x:Name="mainGrid" Width="525" Height="300">
                <Grid x:Name="noteGrid" ShowGridLines="False" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
            </Grid>
        </Viewbox>

    </StackPanel>



</Window>
